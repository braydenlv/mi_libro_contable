<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="8dp"
    android:label="@string/navigation_view_inicio_name">




    <TextView
        android:id="@+id/tvValorEfectivoDisponible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="right"
        android:text="$231.000"
        android:textSize="40sp"
        android:textColor="@android:color/holo_green_dark"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Efectivo disponible"
        android:gravity="right"/>

    <TextView
        android:id="@+id/tvValorAhorrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:text="$1.547.000"
        android:textSize="40sp"
        android:textColor="@android:color/holo_green_dark"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total ahorrado"
        android:gravity="right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Tus porcentajes"
        android:textSize="20sp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/tvValorporcentajeCostosFijos"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="center"
            android:layout_marginEnd="30dp"
            android:textSize="40sp"/>
        <TextView
            android:id="@+id/tvValorPorcentajeAhorro"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="20%"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="center"
            android:layout_marginEnd="30dp"
            android:textSize="40sp" />
        <TextView
            android:id="@+id/tvValorPorcentajeEfectivo"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="30%"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="center"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tvCostosFijos"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Costos fijos"
            android:gravity="center"
            android:layout_marginEnd="30dp"/>
        <TextView
            android:id="@+id/tvPorcentajeAhorros"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Ahorros"
            android:gravity="center"
            android:layout_marginEnd="30dp"/>
        <TextView
            android:id="@+id/tvPorcentajeEfectivo"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Efectivo"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Estados porcentajes"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            app:srcCompat="@android:color/holo_green_dark"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bien"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            app:srcCompat="@android:color/holo_orange_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Moderado"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            app:srcCompat="@android:color/holo_red_light"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CrÃ­tico"/>
    </LinearLayout>



</LinearLayout>